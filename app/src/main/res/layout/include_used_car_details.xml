<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_background">
            <com.lixin.carclassstore.view.viewPage.ImageSlideshow
                android:id="@+id/img_used_car_icon"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="郑州|2017-02-22发布"
            android:textColor="@color/white_smoke"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/text_used_car_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奥迪A6L 2014款 TFSI 标准款"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_used_car_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27.80万"
            android:textSize="20sp"
            android:textColor="@color/btn_login_color"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(报过户费)"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新车含税价："
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_used_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥44.48万"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="5dp"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考价："
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥24.61-28.84万"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="基础信息"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textColor="@color/btn_login_color"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiantou_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_run_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.9万公里"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表显里程"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:background="@color/gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_first_license_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014年3月"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首次上牌"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:background="@color/gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_stall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动/2.0L"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="档位"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_exterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银灰色"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外观"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:background="@color/gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_transfer_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3次"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过户次数"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:background="@color/gray"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_car_displacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国产IV+OBD"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车的排量"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="基础信息"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white_smoke">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="河南结合二手车"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/app_store"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiantou_right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="郑州市金水区三泉路结合汽车大厦"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/app_adress"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆名称:"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奥迪A6L 2014款 TFSI 标准款"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="车信息"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/search_background"/>
</LinearLayout>