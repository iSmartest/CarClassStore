<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_background">
    <RelativeLayout
        android:id="@+id/ly_base_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/btn_login_color">
        <ImageView
            android:id="@+id/Iv_files_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center|left"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_files_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/text_base_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_gravity="center|right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <com.lixin.carclassstore.view.RoundedImageView
                android:id="@+id/car_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:background="@drawable/head_pic_bg"
                android:padding="1.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/head_img_default"
                android:visibility="visible"
                app:is_oval="true"
                tools:ignore="ContentDescription"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/car_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_set_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_set_up"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white_smoke">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/base_info"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:layout_gravity="center"/>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车系"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/car_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车系"
            android:layout_weight="1"
            android:gravity="center|right"/>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车型"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/car_model_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车系"
            android:layout_weight="1"
            android:gravity="center|right"/>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="生产日期"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_choose_time01"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择日期"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/app_kind_jiantou" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="保险日期"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_choose_time02"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择日期"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/app_kind_jiantou" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="上路日期"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_choose_time03"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择日期"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/app_kind_jiantou" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white_smoke">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="保养日期"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_choose_time04"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择日期"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/app_kind_jiantou" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
</LinearLayout>