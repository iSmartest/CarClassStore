<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white_smoke">
        <ImageView
            android:id="@+id/iv_car_picture"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_fail_empty" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_used_car_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="车名"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_used_car_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="里程/"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/text_used_car_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车龄"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/text_used_car_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1"
                android:text="价格"
                android:layout_marginTop="8dp"
                android:textColor="@color/btn_login_color"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/text_used_car_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="质保"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/white_smoke"
                android:background="@color/btn_login_color"
                android:textSize="16sp"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />
</LinearLayout>