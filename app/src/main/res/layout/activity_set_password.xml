<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke">
    <include layout="@layout/activity_base"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/search_background"
        android:textSize="22sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:text="请输入老的密保问题"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保问题："
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_old_password_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的名字是什么？"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题答案"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:id="@+id/edi_old_password_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/search_background"
            android:gravity="left|top"
            android:hint="请输入密保问题答案..."
            android:layout_weight="1"
            android:maxLines="12"
            android:minLines="2"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/gray" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/search_background"
        android:textSize="22sp"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="重置新的密保问题"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保问题"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:id="@+id/edi_new_password_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/search_background"
            android:gravity="left|top"
            android:hint="请输入密保问题答案..."
            android:layout_weight="1"
            android:maxLines="12"
            android:minLines="2"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white_smoke">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题答案"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:id="@+id/edi_new_password_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/search_background"
            android:gravity="left|top"
            android:hint="请输入密保问题答案..."
            android:layout_weight="1"
            android:maxLines="12"
            android:minLines="2"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/gray" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_login_color"
        android:text="提交设置"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:textColor="@color/white_smoke"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>