<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_insurance_expiration_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保险到期提醒"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center|left"/>
        <Switch
            android:id="@+id/switch_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_annual_expiration_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="年审到期提醒"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center|left"/>
        <Switch
            android:id="@+id/switch_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_maintenance_expiration_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保养到期提醒"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center|left"/>
        <Switch
            android:id="@+id/switch_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>
</LinearLayout>