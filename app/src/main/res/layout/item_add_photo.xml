<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/item_add_photo_iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/s_photo_bg"
        android:contentDescription="关于车品商城"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/item_add_photo_tv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/umeng_update_btn_check_off_holo_light"
        android:contentDescription="关于车品商城" />

</RelativeLayout>