<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_service_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务类别"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/text_default_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认排序"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/text_screening_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选方式"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/linear_service_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@color/white_smoke">
            <LinearLayout
                android:id="@+id/linear_all_store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_text_color">
                <View
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_view_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="全部门店"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_text_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/linear_cosmetology_store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_text_color">
                <View
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_view_color"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="美容门店"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/selector_text_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/linear_tyre_store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_text_color">
                <View
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_view_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="轮胎门店"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_text_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/linear_maintain_store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_text_color">
                <View
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_view_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="保养门店"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/selector_text_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/linear_refit_store"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_text_color">
                <View
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_view_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="改装门店"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/selector_text_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>