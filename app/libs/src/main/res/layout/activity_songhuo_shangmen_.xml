<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_songhuo_shangmen_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray1"
    tools:context=".app.activity.Songhuo_shangmen_Activity">
<include
    layout="@layout/base_title2"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家电话:"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/songhuo_shangmen_shangjia_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18539281939"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家地址:"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/songhuo_shangmen_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="郑州市管城区"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件人:"
        android:textSize="16sp"
        />
        <EditText
            android:id="@+id/songhuo_shangmen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人电话"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/songhuo_shangmen_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="18539281939"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件地址"
            android:textSize="16sp"
            />
       <EditText
            android:id="@+id/songhuo_shangmen_kehu_dizhi"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="郑州市管城区"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/s_dizhi"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
      <RelativeLayout
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="商品总额"
              android:textSize="16sp"
              />
          <TextView
              android:id="@+id/songhuo_shangmen_jiazhi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="￥898"
              android:layout_alignParentRight="true"
              />
      </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货费用"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/songhuo_shangmen_yunfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言："
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/songhuo_shangmen_liuyan"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请输入"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>

    <com.lixin.qiaoqixinyuan.app.view.MyListview
         android:layout_marginTop="10dp"
         android:background="@color/white"
         android:id="@+id/songhuo_shangmen_list"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </com.lixin.qiaoqixinyuan.app.view.MyListview>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     <LinearLayout
         android:padding="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_alignParentBottom="true"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="共"
             android:textSize="16sp"
             />
         <TextView
             android:id="@+id/songhuo_shangmen_zongjia"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="￥10"
             android:textSize="16sp"
             android:textColor="@color/theme"
             android:layout_alignParentRight="true"
             />
     </LinearLayout>
        <TextView
            android:id="@+id/songhuo_shangmen_queren"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认下单"
            android:background="@color/theme"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>
