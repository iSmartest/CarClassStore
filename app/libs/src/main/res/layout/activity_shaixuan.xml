<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.ShaixuanActivity">
 <include
    layout="@layout/base_title2"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_shaixuan_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:text="分类"
                android:drawableRight="@mipmap/upper"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_shaixuan_fujin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="附近"
                android:textSize="14sp"
                android:gravity="center"
                android:drawableRight="@mipmap/upper"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_shaixuan_paixu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="智能排序"
                android:textSize="14sp"
                android:gravity="center"
                android:drawableRight="@mipmap/upper"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray"
        />
    <com.lixin.qiaoqixinyuan.app.view.MyListview
        android:id="@+id/shaixuan_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.lixin.qiaoqixinyuan.app.view.MyListview>
</LinearLayout>
