<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_queren_dingdan_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray3"
    tools:context=".app.activity.Queren_dingdan_Activity">
<include
    layout="@layout/base_title2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="共"
        android:textSize="16sp"
       android:gravity="center"
        />
        <TextView
            android:id="@+id/tv_queren_dingdan_jiage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥600"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/theme"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/layout_queren_dingdan_fangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_item_zhifu_zaixian"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="在线付款"
            android:textColor="@color/white"
            android:background="@mipmap/btn"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_item_zhifu_jianmian"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="见面付款"
            android:textColor="@color/white"
            android:background="@mipmap/btn"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
