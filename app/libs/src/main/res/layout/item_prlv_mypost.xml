<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="这就是范儿"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_black"/>
    <ImageView
        android:id="@+id/lv_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
       />
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="这就是范儿"
        android:textSize="15sp"
        android:textColor="@color/dark_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal">
        <com.lixin.qiaoqixinyuan.app.view.CircleImageView
            android:id="@+id/lv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/g_tx" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="16sp"
                android:padding="5dp"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="2017-2-4"
            android:textSize="16sp"
            android:textColor="@color/dark_black"/>
        <TextView
            android:id="@+id/tv_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/yanjing"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="42"
            android:textSize="16sp"
            android:textColor="@color/dark_black"/>
        <TextView
            android:id="@+id/tv_pingluntnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/g_xiaozi"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="60"
            android:textSize="16sp"
            android:textColor="@color/dark_black"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/delete"/>
         </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>