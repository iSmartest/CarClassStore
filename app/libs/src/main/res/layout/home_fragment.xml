<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray1"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <com.lixin.qiaoqixinyuan.app.view.MyGridView
            android:id="@+id/grid_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时活动抢购"
                android:textSize="16sp"
                />
              <TextView
                  android:id="@+id/tv_home_qianggou_more"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="更多"
                  android:textSize="16sp"
                  android:drawableRight="@mipmap/next"
                  android:layout_alignParentRight="true"
                  />
            </RelativeLayout>
        <com.lixin.qiaoqixinyuan.app.view.MyListview
            android:id="@+id/list_home_qianggou"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
        </com.lixin.qiaoqixinyuan.app.view.MyListview>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_home_shangpin_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textSize="16sp"
                    android:drawableRight="@mipmap/next"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <com.lixin.qiaoqixinyuan.app.view.MyListview
                android:id="@+id/list_home_shangpin"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
            </com.lixin.qiaoqixinyuan.app.view.MyListview>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贴吧"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_home_tieba_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textSize="16sp"
                    android:drawableRight="@mipmap/next"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <com.lixin.qiaoqixinyuan.app.view.MyListview
                android:id="@+id/list_home_tieba"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
            </com.lixin.qiaoqixinyuan.app.view.MyListview>
        </LinearLayout>
    </ScrollView>
</LinearLayout>