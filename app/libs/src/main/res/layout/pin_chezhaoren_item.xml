<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="城市区间："
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/iv_pin_cheren_qujian"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="选择城市区间"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
             android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/next"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/iv_pin_cheren_fa_cheng_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发车日期："
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/iv_pin_cheren_fache_shijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发车日期"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableRight="@mipmap/next"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/iv_pin_cheren_fa_cheng_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发车时间："
            android:textSize="16sp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
        <Spinner
            android:id="@+id/iv_pin_cheren_fache_data"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:entries="@array/data"
            android:layout_marginRight="10dp"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <Spinner
            android:id="@+id/iv_pin_cheren_fache_time"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:entries="@array/time1"
            />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="起点城市："
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/iv_pin_cheren_qidian"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入起点"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="终点城市："
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/iv_pin_cheren_zhongdian"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入终点"
            android:background="@null"
            android:textColor="@null"
            android:textSize="14sp"
            />
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
           >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系电话："
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/iv_pin_cheren_dianhua"
            android:padding="0dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入电话"
            android:background="@null"
            android:textColor="@null"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注："
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/iv_pin_cheren_beizhu"
            android:padding="0dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请选择"
            android:background="@null"
            android:textColor="@null"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/iv_pin_cheren_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@mipmap/btn"
            />
    </RelativeLayout>
</LinearLayout>