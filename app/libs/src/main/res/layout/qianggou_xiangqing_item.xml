<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="160px"
        android:layout_height="160px">
  <ImageView
     android:id="@+id/iv_qianggou_xiangqing_imange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/ic_launcher"
    />
        <ImageView
            android:id="@+id/iv_qianggou_xiangqing_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/add"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/tv_qianggou_xiangqing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蛋糕8寸"
            android:textSize="16sp"
            android:gravity="center"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                >
            <ImageView
                android:id="@+id/iv_qianggou_xiangqing_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"
                />
            <TextView
                android:id="@+id/tv_qianggou_xiangqing_nub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_qianggou_xiangqing_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reduce"
                android:visibility="gone"
                />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_qianggou_xiangqing_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/tv_qianggou_xiangqing_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥56"
                android:textSize="22sp"
                android:textColor="@color/theme"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_qianggou_xiangqing_old"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="原价：50"
                android:gravity="center"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_qianggou_xiangqing_dianji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="点击量：100"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>