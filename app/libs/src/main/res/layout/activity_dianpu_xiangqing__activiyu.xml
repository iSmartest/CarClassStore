<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include
        android:id="@+id/include"
        layout="@layout/base_search" />
    <LinearLayout
        android:id="@+id/layout_dianpu_xiangqing"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
    <com.lixin.qiaoqixinyuan.app.view.CircleImageView
        android:id="@+id/dianpu_xiangqing__icon"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="营业时间:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center|left"
                />
            <TextView
                android:id="@+id/dianpu_xiangqing_time"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="2017-01-3日发布"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/dianpu_xiangqing_title"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="湿软美食"
            />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_dianpu_xiangqing"
        android:background="@color/bg_gray3"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/layout_dianpu_xiangqing_fenlei"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/view1"
        >
        <TextView
            android:id="@+id/dianpu_xiangqing_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="全部"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/dianpu_xiangqing_qianggou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="活动抢购"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_marginBottom="2dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_dianpu_xiangqing_fenlei"
        android:background="@color/bg_gray3"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/linear_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/layout_dianpu_xiangqing_fenlei">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/theme"
                android:layout_height="1dp"
                android:visibility="visible"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/theme"
                android:layout_height="1dp"
                android:visibility="invisible"/>
        </LinearLayout>
        <include
            layout="@layout/dianpu_xiangqing_zhifu"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_qianggou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl3"
        android:layout_below="@+id/linear_view"
        android:orientation="vertical"
        android:visibility="invisible"
        >

    <com.xfb.user.custom.view.pulltofresh.library.PullToRefreshListView
        android:id="@+id/prlv_xiangqing_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/black"
        android:dividerHeight="0.5dp"
        />
    </LinearLayout>
</RelativeLayout>