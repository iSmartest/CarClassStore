<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.LoginActivity">
    <include layout="@layout/base_title2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/et_userphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:padding="10dp"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@+id/et_userphone"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="密码"
                android:maxLength="11"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@+id/et_password"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_forgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="忘记密码"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="快速注册"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_btn_bg"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thirdparty_logins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_thirdparty_logins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="第三方账号"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignBottom="@id/tv_thirdparty_logins"
                android:layout_toLeftOf="@id/tv_thirdparty_logins"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignBottom="@id/tv_thirdparty_logins"
                android:layout_toRightOf="@id/tv_thirdparty_logins"
                android:background="@color/gray" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="快速登录"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_qqlogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/qq" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/iv_weixinlogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/weixin" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
