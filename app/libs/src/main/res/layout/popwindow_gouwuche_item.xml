<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layout_gouwuche"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <TextView
       android:id="@+id/iv_pop_xiangqing_title"
       android:padding="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="米饭"
       android:textSize="16sp"
       />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/iv_pop_xiangqing_price"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥36"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/iv_pop_xiangqing_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"
                />
            <TextView
                android:id="@+id/tv_pop_xiangqing_nub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iv_pop_xiangqing_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reduce"
                />
            <ImageView
                android:paddingRight="20dp"
                android:id="@+id/iv_qianggou_xiangqing_delate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete"
                android:paddingLeft="20dp"
                />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>