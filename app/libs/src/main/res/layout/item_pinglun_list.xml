<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center|left"
       >
       <com.lixin.qiaoqixinyuan.app.view.CircleImageView
           android:id="@+id/iv_pinglun_icon"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@mipmap/ic_launcher"
           />
       <TextView
           android:id="@+id/iv_pinglun_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="吕先生"
           android:textSize="16sp"
           android:layout_marginLeft="10dp"
           />
   </LinearLayout>
    <com.lixin.qiaoqixinyuan.app.view.MyGridView
        android:id="@+id/grid_liuyan_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        >
    </com.lixin.qiaoqixinyuan.app.view.MyGridView>
    <TextView
        android:id="@+id/iv_pinglun_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asfdldsahflshl"
        android:textSize="16sp"
        android:padding="10dp"
        />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/iv_pinglun_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：2017_0_4"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/iv_pinglun_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_huifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>
</LinearLayout>