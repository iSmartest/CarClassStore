<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_myaddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.activity.MyAddressActivity">
    <include layout="@layout/base_title2"/>
    <com.xfb.user.custom.view.pulltofresh.library.PullToRefreshListView
        android:id="@+id/prlv_myaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:headerDividersEnabled="false"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        />
    <TextView
        android:id="@+id/tv_addaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:padding="10dp"
        android:gravity="center"
        android:text="添加地址"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
