<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_shangpin_list_icon"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shangpin_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="蓝莓蛋糕"
            android:textSize="16sp"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/tv_shangpin_list_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600m"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_shangpin_list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="西式甜点，提拉米苏"
            android:layout_marginTop="18px"
            android:textSize="14sp"
            android:lines="1"
            android:gravity="center|left"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/tv_shangpin_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="14sp"
                android:textColor="@color/theme"
                />
            <TextView
                android:id="@+id/tv_shangpin_list_yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="原价"
                android:textColor="@color/text_gray"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
          <!--  <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_shangjie_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />-->
            <TextView
                android:id="@+id/tv_shangpin_list_dianpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺"
                android:gravity="center"
                android:textColor="@color/text_gray"
                />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>